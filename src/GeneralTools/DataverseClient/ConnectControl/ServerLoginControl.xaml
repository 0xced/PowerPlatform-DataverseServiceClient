	<Grid x:Name="LayoutRoot" VerticalAlignment="Top" DataContext="{Binding Source={StaticResource OnlineDiscoveryServersDataSource}}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid x:Name="MessageGrid" Grid.Row="0" Height="445.5" Visibility="Collapsed">
			<Grid.RowDefinitions>
				<RowDefinition Height="0.15*"></RowDefinition>
				<RowDefinition  Height="0.78*"></RowDefinition>
				<RowDefinition Height="30px"/>
			</Grid.RowDefinitions>
			<TextBlock x:Name="lblCrmOrg" HorizontalAlignment="Left" Grid.Row="0" Margin="7,3,0,26" FontSize="12"  Text="{x:Static stringRes:Resources.LOGIN_FRM_RETRIEVE}" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="{DynamicResource ConnectControlForegroundBrush}" Background="{DynamicResource ConnectControlBackgroundBrush}" />
			<ipb:PendulumDots HorizontalAlignment="Center" Width="419" Grid.Row="1" x:Name="ipb"
								VerticalAlignment="Top"
										 Foreground="{DynamicResource ConnectControlForegroundBrush}"
										 DotWidth="4"
										 DotHeight="4"
										 DotRadiusX="4"
										 DotRadiusY="4"
										 UnlikeWP="False"
										 TotalDuration="00:00:03.25"
										 ReverseDuration="00:00:03.25"
										 KeyFrameA="0.33"
										 KeyFrameB="0.60"
										 DurationA="00:00:00.65"
										 DurationB="00:00:00.80"
										 DurationC="00:00:00.45"
										 Delay="00:00:00.095"></ipb:PendulumDots>
			<StackPanel HorizontalAlignment="Left" Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" x:Name="stkButtonsMessage">
				<Button x:Name="btnConnect" Content="{x:Static stringRes:Resources.LOGIN_FRM_LOGIN_BTN}" IsEnabled="False" Width="128" Height="28" Foreground="#d8d8d8"/>
				<Button x:Name="btnCancel"  Margin="9,0" Content="{x:Static stringRes:Resources.LOGIN_FRM_CANCEL_BTN}" IsCancel="True" Click="btnCancel_Click" Width="128" Height="28" />
			</StackPanel>
		</Grid>
		<Grid x:Name="LoginGrid" Grid.Row="1" Visibility="Visible" Loaded="LoginGrid_Loaded" ShowGridLines="False">
			<Grid.ColumnDefinitions>
				<ColumnDefinition MinWidth="94px"  MaxWidth="170px" />
				<ColumnDefinition Width="10px"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="50px"/>
				<RowDefinition Height="20.5px"/>
				<RowDefinition Height="31px"/>
				<RowDefinition Height="31px"/>
				<RowDefinition Height="31px"/>
				<RowDefinition Height="31px" />
				<RowDefinition Height="31px"/>
				<RowDefinition Height="31px"/>
				<RowDefinition Height="115px"/>
				<RowDefinition Height="31px"/>
				<RowDefinition Height="66px"/>
				<RowDefinition Height="30"/>
			</Grid.RowDefinitions>

			<TextBlock x:Name="lblSignin" HorizontalAlignment="Left" Grid.Row="0" Text="{x:Static stringRes:Resources.LOGIN_FRM_LOGIN_LBL}" FontSize="18" FontFamily="Segoe UI" TextAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Grid.RowSpan="2" Grid.ColumnSpan="3"/>
			<TextBox x:Name="tbCrmOrg" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Grid.Column="2" Grid.Row="0"  Visibility="Collapsed" />
			<TextBlock x:Name="lblDeplomentType" HorizontalAlignment="Left" Grid.Row="2" Text="{x:Static stringRes:Resources.LOGIN_FRM_DEPLOYMENT_TYPE}" TextWrapping="NoWrap" VerticalAlignment="Center" Grid.Column="0" AutomationProperties.Name="{x:Static stringRes:Resources.LOGIN_FRM_DEPLOYMENT_TYPE}"/>
			<StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" TextElement.Foreground="#444444" Height="22" Width="264" HorizontalAlignment="Left" >
				<RadioButton x:Name="rbOn365" VerticalAlignment="Center" GroupName="CRMType" IsChecked="True" Click="rbOnlinePrem_Click" AutomationProperties.LabeledBy="{Binding ElementName=lblDeplomentType}">
					<AutomationProperties.Name>
						<MultiBinding Converter="{StaticResource AccRadioButtonFormater}" Mode="OneTime">
							<Binding Source="{x:Static stringRes:Resources.LOGIN_FRM_DEPLOYMENT_TYPE}"/>
							<Binding Source="{x:Static stringRes:Resources.LOGIN_FRM_DEPLOYMENT_O365}"/>
						</MultiBinding>
					</AutomationProperties.Name>
                    <TextBlock Margin="4 0 0 0" Text="{x:Static stringRes:Resources.LOGIN_FRM_DEPLOYMENT_ONLINE}"  Foreground="{DynamicResource ConnectControlCheckBoxForegroundBrush}" Background="{DynamicResource ConnectControlBackgroundBrush}" />
				</RadioButton>
				<RadioButton x:Name="rbOnPrem" VerticalAlignment="Center" Margin="10,0,0,0" GroupName="CRMType" Click="rbOnlinePrem_Click" IsEnabled="False" Visibility="Hidden" >
					<AutomationProperties.Name>
						<MultiBinding Converter="{StaticResource AccRadioButtonFormater}" Mode="OneTime">
							<Binding Source="{x:Static stringRes:Resources.LOGIN_FRM_DEPLOYMENT_TYPE}"/>
							<Binding Source="{x:Static stringRes:Resources.LOGIN_FRM_DEPLOYMENT_PREM}"/>
						</MultiBinding>
					</AutomationProperties.Name>
					<TextBlock Margin="4 0 0 0" Text="{x:Static stringRes:Resources.LOGIN_FRM_DEPLOYMENT_PREM}" Foreground="{DynamicResource ConnectControlCheckBoxForegroundBrush}" Background="{DynamicResource ConnectControlBackgroundBrush}" />
				</RadioButton>
			</StackPanel>
			<!--<StackPanel x:Name="stkOrg" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="3"  Height="22" Orientation="Horizontal" VerticalAlignment="Bottom" >
				<CheckBox x:Name="cbAskforOrg"  VerticalAlignment="Bottom">
					<TextBlock x:Name="lblAskForOrg"  Margin="10 0 0 0" Text="{x:Static stringRes:Resources.LOGIN_FRM_ASK_FOR_ORG}" Foreground="{Binding Path=., Converter={StaticResource HCColorConverter}, ConverterParameter='#262626|WindowTextBrush'}" Background="{Binding Path=., Converter={StaticResource HCColorConverter}, ConverterParameter='White|WindowBrush'}"/>
				</CheckBox>
			</StackPanel>-->
			<StackPanel x:Name="stkAdvanced" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center">
				<CheckBox x:Name="cbAdvanced"  VerticalAlignment="Bottom" Checked="cbAdvanced_Checked" Unchecked="cbAdvanced_Checked">
					<TextBlock x:Name="lblAdvanced"  Margin="10 0 0 0" Text="{x:Static stringRes:Resources.LOGIN_FRM_ADVANCED}" Foreground="{DynamicResource ConnectControlCheckBoxForegroundBrush}" Background="{DynamicResource ConnectControlBackgroundBrush}"/>
				</CheckBox>
			</StackPanel>
			<TextBlock x:Name="lblServerName" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="0" Text="{x:Static stringRes:Resources.LOGIN_FRM_SERVERNAME}" TextWrapping="NoWrap" VerticalAlignment="Center" />
			<TextBox x:Name="tbCrmServerName" HorizontalAlignment="Left" VerticalAlignment="Center"  TextWrapping="NoWrap" Grid.Column="2" Grid.Row="4" Width="264" Height="22" BorderBrush="{DynamicResource TextBoxBorderBrush}" BorderThickness="1" AutomationProperties.LabeledBy="{Binding ElementName=lblServerName}"/>
			<TextBlock x:Name="lblServicePort" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="0" Text="{x:Static stringRes:Resources.LOGIN_FRM_SERVERPORT}" TextWrapping="NoWrap" VerticalAlignment="Center"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="2" Grid.Row="5" VerticalAlignment="Center">
				<TextBox x:Name="tbCrmServerPort" HorizontalAlignment="Left" Width="108" MinHeight="22" KeyDown="tbCrmServerPort_KeyDown" MaxLength="10" MaxLines="1" BorderBrush="{DynamicResource TextBoxBorderBrush}" BorderThickness="1" AutomationProperties.LabeledBy="{Binding ElementName=lblServicePort}" />
				<CheckBox x:Name="cbUseSSL" Margin="30,0,0,0" VerticalAlignment="Center" Click="cbUseSSL_Click">
					<TextBlock Margin="10 0 0 0" Text="{x:Static stringRes:Resources.LOGIN_FRM_USE_SSL}"  Foreground="{DynamicResource ConnectControlCheckBoxForegroundBrush}" Background="{DynamicResource ConnectControlBackgroundBrush}"/>
				</CheckBox>
			</StackPanel>
			<TextBlock x:Name="lblCrmAuthSource" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="{x:Static stringRes:Resources.LOGIN_FRM_CRM_AUTH_SOURCE}" VerticalAlignment="Center" Grid.Row="6" Grid.Column="0"></TextBlock>
			<ComboBox x:Name="ddlAuthSource" HorizontalAlignment="Left" Grid.Column="2" Width="264" Height="22" BorderBrush="{StaticResource TextBoxBorderBrush}" DataContext="{Binding Source={StaticResource ClaimsHomeRealmOptionsDataSource}}" ItemTemplate="{DynamicResource ClaimsHomeRealmOptionsHomeRealmTemplate}" ItemsSource="{Binding Items}" BorderThickness="1" Grid.Row="6" SelectionChanged="ddlAuthSource_SelectionChanged" AutomationProperties.LabeledBy="{Binding ElementName=lblCrmAuthSource}" AutomationProperties.AcceleratorKey="Alt+Down"/>

            <StackPanel x:Name="stkUseDefaultCreds" HorizontalAlignment="Left" Grid.Column="2" Height="15" Grid.Row="7" Orientation="Horizontal" VerticalAlignment="Center">
                <CheckBox x:Name="cbUseDefaultCreds" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Click="cbUseDefaultCreds_Click">
                    <TextBlock Margin="10 0 0 0" Text="{x:Static stringRes:Resources.LOGIN_FRM_USE_DEF_CREDS}"  Foreground="{DynamicResource ConnectControlCheckBoxForegroundBrush}" Background="{DynamicResource ConnectControlBackgroundBrush}"/>
                </CheckBox>
            </StackPanel>

            <GroupBox x:Name="GbAdvanced" Header="{x:Static stringRes:Resources.LOGIN_FRM_GB_HEADER}" HorizontalAlignment="Left" Height="115" Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="3" Visibility="Visible">
				<Grid x:Name="AdvancedGrid" Visibility="Visible" HorizontalAlignment="Left">
					<Grid.ColumnDefinitions>
						<ColumnDefinition MinWidth="94px"  MaxWidth="170px" />
						<ColumnDefinition Width="10px"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="31px"/>
						<RowDefinition Height="31px"/>
						<RowDefinition Height="31px"/>
						<RowDefinition Height="31px"/>
					</Grid.RowDefinitions>
					<TextBlock x:Name="lblOnLineRegion" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="{x:Static stringRes:Resources.LOGIN_FRM_ONLINE_REGION}" Background="{x:Null}" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" />
					<ComboBox x:Name="ddlCrmOnlineRegions" Grid.Row="0" Grid.Column="2" SelectedIndex="0" Width="264" HorizontalAlignment="Left" VerticalAlignment="Center" BorderThickness="1" Height="22" ItemTemplate="{DynamicResource CrmOnlineDiscoveryServerTemplate}" ItemsSource="{Binding Servers}" AutomationProperties.LabeledBy="{Binding ElementName=lblOnLineRegion}" AutomationProperties.AcceleratorKey="Alt+Down" />
					<TextBlock x:Name="lblUserName" TextWrapping="NoWrap" HorizontalAlignment="Left" Text="{x:Static stringRes:Resources.LOGIN_FRM_USERNAME}" Grid.Row="1" VerticalAlignment="Center" Grid.Column="0" />
					<TextBox x:Name="tbUserId" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Width="264" HorizontalAlignment="Left" Height="22" MaxLength="254" BorderBrush="{DynamicResource TextBoxBorderBrush}" BorderThickness="1" AutomationProperties.LabeledBy="{Binding ElementName=lblUserName}" />
					<TextBlock x:Name="lblPassword" TextWrapping="NoWrap" HorizontalAlignment="Left" Text="{x:Static stringRes:Resources.LOGIN_FRM_PASSWORD}" Grid.Row="2" VerticalAlignment="Center" Grid.Column="0" />
					<PasswordBox x:Name="tbPassword"  Grid.Column="2" MaxLength="100" HorizontalAlignment="Left" VerticalAlignment="Center"  Height="22" Width="264" Grid.Row="2" BorderBrush="{DynamicResource TextBoxBorderBrush}" BorderThickness="1" AutomationProperties.LabeledBy="{Binding ElementName=lblPassword}" />
					<TextBlock x:Name="lblDomainName" TextWrapping="NoWrap" HorizontalAlignment="Left" Text="{x:Static stringRes:Resources.LOGIN_FRM_DOMAIN}" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center"  />
					<TextBox x:Name="tbDomain" HorizontalAlignment="Left" TextWrapping="NoWrap" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" Height="22" Width="264" BorderBrush="{DynamicResource TextBoxBorderBrush}" BorderThickness="1" MaxLength="254" MaxLines="1" AutomationProperties.LabeledBy="{Binding ElementName=lblDomainName}" />
				</Grid>
			</GroupBox>
			<StackPanel x:Name="stkOrg" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center" >
				<CheckBox x:Name="cbAskforOrg"  VerticalAlignment="Bottom">
					<TextBlock x:Name="lblAskForOrg"  Margin="10 0 0 0" Text="{x:Static stringRes:Resources.LOGIN_FRM_ASK_FOR_ORG}"  Foreground="{DynamicResource ConnectControlCheckBoxForegroundBrush}" Background="{DynamicResource ConnectControlBackgroundBrush}"/>
				</CheckBox>
			</StackPanel>
			
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="3"  VerticalAlignment="Center" Visibility="Collapsed"  x:Name="stkMessage">
				<Image x:Name="imgErrResult" Source="ImageResources\SymbolError.png" Height="18" Margin="0,-2" HorizontalAlignment="Left"></Image>
				<TextBlock x:Name="tbConnectStatus" Foreground="{DynamicResource TbConnectTextblockStatusForegroundBrush}" Margin="4,0" TextWrapping="Wrap" MinWidth="300" MaxWidth="360"  ></TextBlock>
			</StackPanel>
			<StackPanel HorizontalAlignment="Left" Grid.Row="11" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center"  x:Name="stkButtons">
				<Button x:Name="btn_Connect" Content="{x:Static stringRes:Resources.LOGIN_FRM_LOGIN_BTN}" IsDefault="True" Click="btn_ConnectToServer" Width="128" Height="28"/>
				<Button x:Name="btn_Cancel"  Margin="9,0" Content="{x:Static stringRes:Resources.LOGIN_FRM_CANCEL_BTN}" IsCancel="True" Click="btn_CancelSave" Width="128" Height="28"/>
			</StackPanel>
		</Grid>
		<Grid x:Name="OrgSelectGrid" Grid.Row="2" Height="445.5" DataContext="{Binding Source={StaticResource CrmOrgListDataSource}}" Visibility="Collapsed"  >
			<Grid.RowDefinitions>
				<RowDefinition Height="26px"></RowDefinition>
				<RowDefinition Height="42px"></RowDefinition>
				<RowDefinition Height="23px"></RowDefinition>
				<RowDefinition  Height="0.67*"></RowDefinition>
				<RowDefinition  Height="28px"></RowDefinition>
				<RowDefinition Height="30"/>
			</Grid.RowDefinitions>
			<TextBlock x:Name="lblCrmMultOrg" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12"  Text="{x:Static stringRes:Resources.LOGIN_FRM_MULT_ORG}" TextWrapping="Wrap" Foreground="{DynamicResource ConnectControlForegroundBrush}" MaxWidth="379" Background="{DynamicResource ConnectControlBackgroundBrush}" />
			<ListView x:Name="lvOrgList" HorizontalAlignment="Stretch" VerticalAlignment="Center" ItemsSource="{Binding OrgsList}" SelectionMode="Single" BorderThickness="1" BorderBrush="#d8d8d8" Height="297.5" AllowDrop="True" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Padding="0" Grid.Row="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Loaded="lvOrgList_Loaded">
				<ListView.ItemContainerStyle>
					<Style TargetType="{x:Type ListViewItem}">
						<Setter Property="ToolTip">
							<Setter.Value>
								<MultiBinding Converter="{StaticResource OrgNameFormat}">
									<Binding Path="FriendlyName" />
									<Binding Path="UniqueOrdName" />
								</MultiBinding>
							</Setter.Value>
						</Setter>
						<EventSetter Event="MouseDoubleClick" Handler="mouseConnectOrg_DoubleClick" />
						<Style.Triggers>
							<Trigger Property="IsSelected" Value="True">
								<Setter Value="{DynamicResource ConnectControlOnSelectedListViewBackgroundBrush}" Property="Background" />
							</Trigger>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter  Value="{DynamicResource ConnectControlOnSelectedListViewBackgroundBrush}" Property="Background" />
							</Trigger>
						</Style.Triggers>
					</Style>
				</ListView.ItemContainerStyle>
				<ListView.View>
					<GridView AllowsColumnReorder="true">
						<GridViewColumn DisplayMemberBinding="{Binding DiscoveryServerName}" Width="150">
                            <GridViewColumnHeader Content="{x:Static stringRes:Resources.LOGIN_FRM_REG_HEADER}" Tag="DiscoveryServerName" Click="Sort_Click" HorizontalContentAlignment="Left"/>
						</GridViewColumn>
						<GridViewColumn x:Name="OrgCol" Width="215">
							<GridViewColumnHeader Content="{x:Static stringRes:Resources.LOGIN_FRM_ORG_HEADER}" Tag="FriendlyName" Click="Sort_Click" HorizontalContentAlignment="Left"/>
							<GridViewColumn.DisplayMemberBinding>
								<MultiBinding
									Converter="{StaticResource OrgNameFormat}">
									<Binding Path="FriendlyName" />
                                    <Binding Path="UrlHostName" />
								</MultiBinding>
							</GridViewColumn.DisplayMemberBinding>
						</GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Center"  Visibility="Collapsed" x:Name="stkMessageOrg">
				<Image x:Name="imgErrResultOrg" Source="ImageResources\SymbolError.png" Height="18" Margin="0,-2" HorizontalAlignment="Left"></Image>
				<TextBlock x:Name="tbConnectStatusOrg" Foreground="{DynamicResource ConnectControlErrorForegroundColor}" Margin="4,0" ></TextBlock>
			</StackPanel>

			<StackPanel HorizontalAlignment="Left" Margin="0" Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Center" x:Name="stkButtonsOrg">
				<Button x:Name="btnConnectOrg" Content="{x:Static stringRes:Resources.LOGIN_FRM_LOGIN_BTN}" IsDefault="True" Click="btnConnectOrg_Click"  Width="128" Height="28"/>
				<Button x:Name="btnCancelOrg"  Margin="9,0" Content="{x:Static stringRes:Resources.LOGIN_FRM_CANCEL_BTN}" IsCancel="True" Click="btnCancelOrg_Click"  Width="128" Height="28" />
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>